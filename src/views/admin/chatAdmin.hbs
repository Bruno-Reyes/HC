<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
<div class="col-md-4 mt-5 mx-auto">
    <div id="nickWrap" class="card">
        <div class="card-body">
            <form id="nickForm">
                <button type="submit" class="btn btn-warning btn-block">
                    <i class="fas fa-location-arrow"></i> Entrar al chat
                </button>
            </form>
        </div>
    </div>
</div>

<div class="container" id="contentWrap">
        <div class="row mt-2">
            <div class="col-md-6 offset-md-1">
                <div class="card">
                    <div class="card-header">
                        <h4>Let's chat</h4>
                    </div>
                    <div id='chat' class="card-body">

                    </div>
                    <form class='card-footer' id="message-form">
                        <div class="card-action row">
                            <select id="Usuarios-S" class="col s4 btn">
                                
                            </select>
                            <input type="text" id="message" class="form-control" autocomplete="off">
                                <button type="submit" class="col s4 btn">
                                    <i class="fas fa-location-arrow"></i> Enviar
                                </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-header">
                        <h3>Usuarios</h3>
                    </div>
                    <div class="card-body">
                        <div id="usernames">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
