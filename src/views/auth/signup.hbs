<link rel="stylesheet" type="text/css" href="/css/style.min.css">
<link rel="stylesheet" href="/css/login.css">
<div class="row">
    <div class="col s12">
        <div class="container">
            <div id="login-page" class="row">
                <div class="col s12 m6 l4 z-depth-4 card-panel border-radius-6 login-card bg-opacity-8">
                    <form class="login-form" action="/signup" method="POST">
                        <div class="row">
                            <div class="input-field col s12">
                                <h5 class="ml-4">Registro...</h5>
                            </div>
                        </div>
                        <div class="row margin">
                            <div class="input-field col s6">
                                <i class="material-icons prefix pt-2">person_outline</i>
                                <input id="nombre" type="text" name="nombre">
                                <label for="nombre" class="center-align">Nombre</label>
                            </div>
                            <div class="input-field col s6">
                                <input id="apellido" type="text" name="apellido">
                                <label for="apellido" class="center-align">Apellido</label>
                            </div>
                        </div>
                        <div class="row margin">
                            <div class="input-field col s12">
                                <i class="material-icons prefix pt-2">date_range</i>
                                <input type="date" id="date" name="fecha_nacimiento" value="" min="1970-01-01"
                                    max="1990-01-01">
                                {{!-- <input type="text" class="datepicker"> --}}
                                <label for="date">Fecha de Nacimiento</label>
                            </div>
                        </div>
                        <div class="row margin">
                            <div class="input-field col s6">
                                <p>
                                    <label>
                                        <input class="with-gap" name="Genero" type="radio" value="Masculino"/>
                                        <span>Masculino</span>
                                    </label>
                                </p>
                                <p>
                                    <label>
                                        <input class="with-gap" name="Genero" type="radio" value="Femenino" />
                                        <span>Femenino</span>
                                    </label>
                                </p>
                            </div>
                            <div class="input-field col s6">
                                <p>
                                    <label>
                                        <input class="with-gap" name="Enfermedad" type="radio"  value="Ninguna" />
                                        <span>Ninguna</span>
                                    </label>
                                </p>
                                <p>
                                    <label>
                                        <input name="Enfermedad" type="radio" value="Cardiovascular"/>
                                        <span>Enfermedad Cardiovascular (Respiratorias)</span>
                                    </label>
                                </p>
                                <p>
                                    <label>
                                        <input name="Enfermedad" type="radio" value="Motriz"/>
                                        <span>Discapacidad Motriz</span>
                                    </label>
                                </p>
                            </div>
                        </div>

                        <div class="row margin">
                            <div class="input-field col s12">
                                <p class="range-field">
                                    <label for="Frecuencia"><h5  class="center-align">¿Cuantás veces haces ejercicio por semana?</h5></label>
                                    <input type="range" id="Frecuencia" min="0" max="7" name="Frecuencia"/>
                                </p>    
                            </div>
                        </div>
                        <div class="row margin">
                            <div class="input-field col s6">
                                <i class="material-icons prefix pt-2">assignment</i>
                                <input id="peso" type="text" name="peso">
                                <label for="peso" class="center-align">Peso</label>
                            </div>
                            <div class="input-field col s6">
                                <input id="estatura" type="text" name="estatura">
                                <label for="estatura" class="center-align">Estatura</label>
                            </div>
                        </div>
                        <div class="row margin">
                            <div class="input-field col s6">
                                <i class="material-icons prefix pt-2">email</i>
                                <input id="email" type="text" name="email">
                                <label for="email" class="center-align">Email</label>
                            </div>
                            <div class="input-field col s6">
                                <i class="material-icons prefix pt-2">mood</i>
                                <input id="usuario" type="text" name="user">
                                <label for="usuario" class="center-align">Usuario</label>
                            </div>
                        </div>
                         <div class="row margin">
                            <div class="input-field col s12">
                                <i class="material-icons prefix pt-2">lock_outline</i>
                                <input id="password" type="password" name="password">
                                <label for="password">Contraseña</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <button
                                    class="btn waves-effect waves-light border-round gradient-45deg-purple-deep-orange col s12">
                                    ¡Registrarme ahora!
                                </button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s6 m6 l6">
                                <p class="margin medium-small"><a href="/login">¡Iniciar Sesion!</a></p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="content-overlay"></div>
    </div>
</div>
<script src="/js/vendors.min.js"></script>
<script src="/js/plugins.min.js"></script>
<script src="/js/search.min.js"></script>