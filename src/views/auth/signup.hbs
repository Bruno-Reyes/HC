<link rel="stylesheet" type="text/css" href="/css/style.min.css">
<link rel="stylesheet" href="/css/login.css">
<script src="/js/signup.js"></script>

<div class="row">
    <div class="col s12">
        <div class="container">
            <div id="login-page" class="row">
                <form class="login-form" action="/signup" method="POST" onsubmit="return validarAll()">
                    <div class="col s12 m12 l5 z-depth-4 card-panel border-radius-6 login-card bg-opacity-8 block">
                        <div class="row">
                            <div class="input-field col s12">
                                <h5 class="ml-4">Registro</h5>
                            </div>
                        </div>
                        <div class="row margin">
                            <div class="input-field col s6">
                                <i class="material-icons prefix pt-2">person_outline</i>
                                <input id="nombre" type="text" name="nombre" maxlength="10">
                                <label for="nombre" class="center-align">Nombre</label>
                            </div>
                            <div class="input-field col s6">
                                <input id="apellido" type="text" name="apellido" maxlength="10">
                                <label for="apellido" class="center-align">Apellido</label>
                            </div>
                        </div>
                        <div class="row margin">
                            <div class="input-field col s12">
                                <i class="material-icons prefix pt-2">date_range</i>
                                <input type="text" class="datepicker" id="date" name="fecha_nacimiento">
                                <label for="date">Fecha de Nacimiento</label>
                            </div>
                        </div>
                        <div class="row margin">
                            <div class="input-field col s6">
                                <p>
                                    <label>
                                        <input class="with-gap" name="Genero" type="radio" value="Masculino" />
                                        <span>Masculino</span>
                                    </label>
                                </p>
                                <p>
                                    <label>
                                        <input class="with-gap" name="Genero" type="radio" value="Femenino" />
                                        <span>Femenino</span>
                                    </label>
                                </p>
                            </div>
                            <div class="input-field col s6">
                                <select name="Enfermedad">
                                    <option disabled selected>Seleccione una opción</option>
                                    <option value="Ninguna">Ninguna</option>
                                    <option value="Cardiovascular">Enfermedad Cardiovascular (Respiratoria)</option>
                                    <option value="Discapacidad Motriz">Discapacidad Motriz</option>
                                </select>
                                <label>Padece de alguna enfermedad</label>
                            </div>
                        </div>

                        <div class="row margin">
                            <div class="input-field col s12">
                                <p class="range-field">
                                    <label for="Frecuencia">
                                        <h5 class="center-align">¿Cuántos días haces ejercicio a la semana?</h5>
                                    </label>
                                    <input type="range" id="Frecuencia" min="0" max="7" name="Frecuencia" />
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col l1"></div>
                    <div class="col s12 m12 l5 z-depth-4 card-panel border-radius-6 login-card bg-opacity-8">
                        <div class="row margin">
                            <div class="input-field col s6">
                                <i class="material-icons prefix pt-2">assignment</i>
                                <input id="peso" type="text" name="peso" maxlength="5">
                                <label for="peso" class="center-align">Peso (kg)</label>
                            </div>
                            <div class="input-field col s6">
                                <i class="material-icons prefix pt-2">accessibility</i>
                                <input id="estatura" type="text" name="estatura" maxlength="4">
                                <label for="estatura" class="center-align">Estatura (cm)</label>
                            </div>
                        </div>
                        <div class="row margin">
                            <div class="input-field col s6">
                                <i class="material-icons prefix pt-2">email</i>
                                <input id="email" type="email" name="email" maxlength="30">
                                <label for="email" class="center-align">Email</label>
                            </div>
                            <div class="input-field col s6">
                                <i class="material-icons prefix pt-2">mood</i>
                                <input id="usuario" type="text" name="user" maxlength="20">
                                <label for="usuario" class="center-align">Usuario</label>
                            </div>
                        </div>
                        <div class="row margin">
                            <div class="input-field col s12">
                                <i class="material-icons prefix pt-2">lock_outline</i>
                                <input id="password" type="password" name="password" maxlength="20">
                                <label for="password">Contraseña</label>
                            </div>
                        </div>
                        <div class="row margin">
                            <div class="input-field col s12">
                                <i class="material-icons prefix pt-2">lock</i>
                                <input id="conPass" type="password" name="confirm_password" maxlength="20">
                                <label for="password">Confirmar contraseña</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <button
                                    class="btn waves-effect waves-light border-round gradient-45deg-purple-deep-orange col s12">
                                    ¡Registrarme ahora!
                                </button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s6 m6 l6">
                                <p class="margin medium-small"><a href="/login">¡Iniciar Sesion!</a></p>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>

