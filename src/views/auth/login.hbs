<style>
    .login-bg {
        background-image: url("/img/flat-bg.jpg");
        background-repeat: repeat;
        background-size: cover;
    }
    .form-login {
        background: rgba(255, 255, 255, 0.808);
    }
</style>
<div class="container">
    <div class="row">
        <form class="col s12 form-login" action="/login" method="POST" autocomplete="off">
            <div class="input-field col s12">
                <h5 class="ml-4">Iniciar Sesion</h5>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix pt-2">person_outline</i>
                    <input id="username" type="text" name="user">
                    <label for="username" class="center-align">
                        Usuario o Correo electrónico
                    </label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix pt-2">lock_outline</i>
                    <input id="password" type="password" name="password">
                    <label for="password">Contraseña</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <button class="btn waves-effect waves-light border-round gradient-45deg-purple-deep-orange col s12">
                        Comenzar
                    </button>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6 m6 l6">
                    <p class="margin medium-small"><a href="/signup">Registrate ahora!</a></p>
                </div>
                <div class="input-field col s6 m6 l6">
                    <p class="margin right-align medium-small">
                        <a href="user-forgot-password.html">
                            Recuperar contraseña?
                        </a>
                    </p>
                </div>
            </div>
        </form>
    </div>
</div>
        
